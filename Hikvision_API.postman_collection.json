{
  "info": {
    "name": "Hikvision Integration API",
    "description": "API endpoints for Hikvision camera integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Initialize Hikvision Cameras",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/hikvision/initialize",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "hikvision", "initialize"]
        },
        "description": "Discovers all cameras from Hikvision API and adds them to database"
      },
      "response": []
    },
    {
      "name": "Manual Stream Renewal",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/hikvision/renew",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "hikvision", "renew"]
        },
        "description": "Manually trigger stream URL renewal for all Hikvision-enabled cameras"
      },
      "response": []
    },
    {
      "name": "Get Hikvision Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/api/hikvision/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "hikvision", "status"]
        },
        "description": "Get status of all Hikvision-enabled cameras"
      },
      "response": []
    },
    {
      "name": "Enable Hikvision for Camera",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"deviceSerial\": \"FC9147667\",\n  \"resourceId\": \"ad52c2efccd64193a51594a44feaa160\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/hikvision/camera/:cameraId/enable",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "hikvision", "camera", ":cameraId", "enable"],
          "variable": [
            {
              "key": "cameraId",
              "value": "YOUR_CAMERA_ID_HERE"
            }
          ]
        },
        "description": "Enable Hikvision auto-renewal for a specific camera"
      },
      "response": []
    },
    {
      "name": "Disable Hikvision for Camera",
      "request": {
        "method": "PATCH",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/api/hikvision/camera/:cameraId/disable",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "hikvision", "camera", ":cameraId", "disable"],
          "variable": [
            {
              "key": "cameraId",
              "value": "YOUR_CAMERA_ID_HERE"
            }
          ]
        },
        "description": "Disable Hikvision auto-renewal for a specific camera"
      },
      "response": []
    },
    {
      "name": "Get All Cameras",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/api/cameras",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "cameras"]
        },
        "description": "Get all cameras including Hikvision-enabled ones"
      },
      "response": []
    }
  ]
}
